<%- include("partials/header.ejs") %>

<div class="container">
	<h1 class="display-3 text-center my-5">Welcome to The Shoppies!</h1>
	<div class="row">
		<div class="col-10 mx-auto">
			<div class="row border rounded-lg py-5">
				<div class="col border-right">
					<div class="row">
						<div class="col-8 mx-auto">
							
							<form action="/login" method="POST">
								<div class="form-group">
									<label for="username">Username</label>
									<input id="username" class="form-control" name="username" type="text" required>
								</div>
								<div class="form-group">
									<label for="login-password">Password</label>
									<input id="login-password" class="form-control" name="password" type="password" required>
								</div>
								<button type="submit" class="btn btn-primary">Submit</button>
							</form>
							
						</div>
					</div>
				</div>
				<div class="col">
					<div class="row">
						<div class="col-8 mx-auto">
							<a href="/register" class="btn btn-secondary">Register</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("partials/footer.ejs") %>